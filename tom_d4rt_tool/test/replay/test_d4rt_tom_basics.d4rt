# D4rt Test Suite - Part 1: TomBasics Classes
# Run with: d4rt -run-replay test_d4rt_tom_basics.d4rt -test
# Tests TomBasics bridged classes: tomLog, TomLogLevel, TomPlatform constants


# =============================================================================
# Test: tomLog Global Variable (5 tests)
# =============================================================================

verifyNotNull(tomLog, 'tomLog global exists');

tomLog.info('Test info message from D4rt test');
verify(true, 'tomLog.info executed');

tomLog.debug('Debug message');
verify(true, 'tomLog.debug executed');

tomLog.warn('Warning message');
verify(true, 'tomLog.warn executed');

# Note: tomLog methods return void, so we just verify they don't throw

# =============================================================================
# Test: TomLogLevel Static Values (6 tests)
# =============================================================================

var debugLevel = TomLogLevel.debug;
verifyNotNull(debugLevel, 'Debug level not null');
verifyEquals(debugLevel.levelPattern, 2, 'Debug level pattern is 2');

var infoLevel = TomLogLevel.info;
verifyEquals(infoLevel.levelPattern, 8, 'Info level pattern is 8');

var warnLevel = TomLogLevel.warn;
verifyEquals(warnLevel.levelPattern, 16, 'Warn level pattern is 16');

var errorLevel = TomLogLevel.error;
verifyEquals(errorLevel.levelPattern, 512, 'Error level pattern is 512');

var severeLevel = TomLogLevel.severe;
verifyEquals(severeLevel.levelPattern, 1024, 'Severe level pattern is 1024');

# =============================================================================
# Test: TomLogLevel Operations (4 tests)
# =============================================================================

var combined = TomLogLevel.debug + TomLogLevel.info;
verifyEquals(combined.levelPattern, 10, 'Combined debug+info is 10');

var combined2 = TomLogLevel.error + TomLogLevel.severe;
verifyEquals(combined2.levelPattern, 1536, 'Combined error+severe is 1536');

var allLevel = TomLogLevel.all;
verifyEquals(allLevel.levelPattern, 65535, 'All level pattern');

var noneLevel = TomLogLevel.none;
verifyEquals(noneLevel.levelPattern, 0, 'None level pattern is 0');

# =============================================================================
# Test: TomPlatform Constants (5 tests)
# =============================================================================

verifyNotNull(platformMacos, 'macOS platform constant');
verifyNotNull(platformLinux, 'Linux platform constant');
verifyNotNull(platformWindows, 'Windows platform constant');
verifyNotNull(platformWeb, 'Web platform constant');
verifyNotNull(noTomPlatform, 'No platform constant');

# =============================================================================
# Summary
# =============================================================================

testSummary();
