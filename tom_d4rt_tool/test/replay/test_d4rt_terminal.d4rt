# D4rt Test Suite - Terminal and Ansi Classes
# Run with: d4rt test_d4rt_terminal.d4rt -test
# Tests dcli_terminal bridged classes


# =============================================================================
# Test: Ansi Class (6 tests)
# =============================================================================

# Test Ansi class - static getters only
var ansi = Ansi();
verifyNotNull(ansi, 'Ansi created');

var isSupported = Ansi.isSupported;
verifyNotNull(isSupported != null, 'Ansi.isSupported exists');

# Test Ansi.strip
var stripped = Ansi.strip('plain text');
verifyEquals(stripped, 'plain text', 'Ansi.strip works');

# =============================================================================
# Test: AnsiColor Class (12 tests)
# =============================================================================

# Static color instances
var redColor = AnsiColor.red;
verifyNotNull(redColor, 'AnsiColor.red exists');

var greenColor = AnsiColor.green;
verifyNotNull(greenColor, 'AnsiColor.green exists');

var blueColor = AnsiColor.blue;
verifyNotNull(blueColor, 'AnsiColor.blue exists');

var yellowColor = AnsiColor.yellow;
verifyNotNull(yellowColor, 'AnsiColor.yellow exists');

# Color codes
verifyEquals(AnsiColor.codeRed, 31, 'AnsiColor.codeRed value');
verifyEquals(AnsiColor.codeGreen, 32, 'AnsiColor.codeGreen value');
verifyEquals(AnsiColor.codeBlue, 34, 'AnsiColor.codeBlue value');
verifyEquals(AnsiColor.codeYellow, 33, 'AnsiColor.codeYellow value');

# Create custom color
var customColor = AnsiColor(31);
verifyNotNull(customColor, 'Custom AnsiColor created');

